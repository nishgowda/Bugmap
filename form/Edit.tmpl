{{ define "Edit" }}
  {{ template "Header" }}
    {{ template "Menu" }} 
    <center>
    <div class="container">
   <h2>Edit Issue</h2>  
    <form method="POST" action="update">
      <input type="hidden" name="uid" value="{{ .Id }}" />
      <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">Name</span>
      </div>
      <input type="text" class="form-control" placeholder="Name" aria-label="Username" aria-describedby="basic-addon1" value="{{ .Name }}" name="name"><br />
    </div>
      <div class="input-group">
    <div class="input-group-prepend">
      <span class="input-group-text">Description</span>
    </div>
    <textarea class="form-control" aria-label="With textarea" name="description"  value="{{ .Description }}" rows="3" ></textarea><br />
  </div>
      <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">Priority</span>
      </div>
      <input type="text" class="form-control" placeholder="Priority" aria-label="Username" aria-describedby="basic-addon1" value="{{ .Priority }}" name="priority" ><br />
    </div>
  <div>
      <input type="submit" class="btn btn-primary" value="Save" />
      </div>
    </form><br />    
    </center>
    </div>
  {{ template "Footer" }}
{{ end }}