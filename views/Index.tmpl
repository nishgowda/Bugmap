{{ define "Index" }}
  {{ template "Header" }}
    {{ template "Menu"  }}
    <center>
    <h1> Pending Blips </h1>
    <div class="container">
    <table class="table" >
      <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Priority</th>
        <th scope="col">View</th>
        <th scope="col">Edit</th>
        <th scope="col">Resolve</th>
      </tr>
       </thead>
       <tbody>
    {{ range .  }}
      <tr>
        <td>{{ .Date }} </td> 
        <td> {{ .Name }} </td>
        <td>{{ .Description }} </td> 
        <td>{{ .Priority }} </td> 
        <td><a href="/show?id={{ .Id }}">View</a></td>
        <td><a href="/edit?id={{ .Id }}">Edit</a></td>
        <td><a href="/delete?id={{ .Id }}">Resolve</a><td>
      </tr>
    {{ end }}
       </tbody>
    </table>
    <button type="button" class="btn btn-primary"  onclick="window.location.href='/new';">New Blip</button>
    </center>
    </div>

  {{ template "Footer" }}
{{ end }}



